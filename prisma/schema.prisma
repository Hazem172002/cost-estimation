// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Selects {
  id          String    @id @default(uuid())
  featureName String
  platfromId  String
  Platforms   Platforms @relation(fields: [platfromId], references: [id])
}

model Platforms {
  id              String            @id @default(uuid())
  front           Boolean           @default(false)
  IOS             Boolean           @default(false)
  android         Boolean           @default(false)
  web             Boolean           @default(false)
  desktop         Boolean           @default(false)
  Foundations     Foundations[]
  Functionalities Functionalities[]
  Selects         Selects[]
}

model Foundations {
  id          String        @id @default(uuid())
  platfromId  String
  LandingPage LandingPage[]
  Settings    Settings[]
  Help        Help[]
  Auth        Auth[]
  Platforms   Platforms     @relation(fields: [platfromId], references: [id])
}

model LandingPage {
  id           String      @id @default(uuid())
  foundationId String
  featureName  String
  Foundations  Foundations @relation(fields: [foundationId], references: [id])
}

model Settings {
  id           String      @id @default(uuid())
  foundationId String
  featureName  String
  Foundations  Foundations @relation(fields: [foundationId], references: [id])
}

model Help {
  id           String      @id @default(uuid())
  foundationId String
  featureName  String
  Foundations  Foundations @relation(fields: [foundationId], references: [id])
}

model Auth {
  id           String      @id @default(uuid())
  foundationId String
  featureName  String
  Foundations  Foundations @relation(fields: [foundationId], references: [id])
}

model Functionalities {
  id                      String                    @id @default(uuid())
  platfromId              String
  Platforms               Platforms                 @relation(fields: [platfromId], references: [id])
  LearningManagmentSystem LearningManagmentSystem[]
  WorkPlace               WorkPlace[]
  ODCManagment            ODCManagment[]
  jopHub                  jopHub[]
}

model LearningManagmentSystem {
  id              String          @id @default(uuid())
  featureName     String          @unique
  functionalityId String
  Functionalities Functionalities @relation(fields: [functionalityId], references: [id])
}

model WorkPlace {
  id              String @id @default(uuid())
  featureName     String @unique
  functionalityId String

  Functionalities Functionalities @relation(fields: [functionalityId], references: [id])
}

model ODCManagment {
  id              String @id @default(uuid())
  featureName     String @unique
  functionalityId String

  Functionalities Functionalities @relation(fields: [functionalityId], references: [id])
}

model jopHub {
  id              String @id @default(uuid())
  featureName     String @unique
  functionalityId String

  Functionalities Functionalities @relation(fields: [functionalityId], references: [id])
}
